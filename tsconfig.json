{
    "compileOnSave": false,
    "compilerOptions": {
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "outDir": "dist",
        "noEmit": false,
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}